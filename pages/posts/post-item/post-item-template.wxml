<template name="postItem">
  <view class="post-container">
    <view class="post-author-date">
      <image src="{{author_img}}"></image>
      <text>{{date}}</text>
    </view>
    <text wx:if="{{img_flag}}" class="post-title">{{title}}</text>
    <image class="post-image" src="{{post_img}}"></image>
    <text class="post-content">{{content}}</text>
    <view class="post-like">
      <image class="post-like-image" src="/images1/icon/chat.png"></image>
      <text class="post-like-font">{{view_num}}</text>
      <image class="post-like-image" src="/images1/icon/view.png"></image>
      <text class="post-like-font">{{cillect_num}}</text>
    </view>
  </view>
</template>