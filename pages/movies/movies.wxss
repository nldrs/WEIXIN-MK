@import "movie-list/movielist-template.wxss";
@import "movie-grid/movie-grid-template.wxss";
.container{
    background-color: #f2f2f2;
}
.search{
    background:#f2f2f2;
    height:80rpx;
    width:100%;
    display:flex;
    flex-direction:row;
}
.icon-image{
   margin:auto 0 auto 20rpx;
}
.search input{
     height:100%;
    width:600rpx;
    margin-left:20rpx;
    font-size:28rpx;
}
.placeholder{
    font-size:14rpx;
    color:#d1d1d1;
    margin-left:20rpx;
}
.searchPanel{
    position:absolute;
    top:80rpx;
}

.cancel{
    width:30rpx;
    height:30rpx;
    margin:auto 0 auto 0;
}
